{% extends '::base.html.twig' %}
{% import _self as macro %}

{% macro copyright(year) %}
    {% spaceless %}
        {% set current_year = 'now'|date('Y') %}
        Â©{{ year }}{% if current_year > year %}-{{ current_year }}{% endif %}
    {% endspaceless %}
{% endmacro %}

{% block sheets %}
    {% stylesheets
        output='css/app.css'
        '@BernyFrontBundle/Resources/assets/style/main.less'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block scripts %}
    {% javascripts
        output='js/app.js'
        '@BernyFrontBundle/Resources/components/require.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <header class="site-branding">
        <header class="title">
            <h1>rny.cc</h1>
        </header>
    </header>

    <main class="main-content">
        {% block main '' %}
    </main>

    <footer class="site-footer">
        <span class="site">rny.cc</span>
        <span class="copyright">{{ macro.copyright(2013) }} by <a href="//twitter.com/xphere">Berny Cantos</a></span>
    </footer>
{% endblock %}
